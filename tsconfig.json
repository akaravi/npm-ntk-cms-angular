{
  "compileOnSave": false,
  "compilerOptions": {
    "baseUrl": "./",
    "outDir": "./dist/out-tsc",
    "sourceMap": true,
    "declaration": false,
    "downlevelIteration": true,
    "experimentalDecorators": true,
    "moduleResolution": "node",
    "importHelpers": true,
    "target": "es2015",
    "module": "es2020",
    "lib": [
      "es2018",
      "dom"
    ],
    "paths": {
      "ntk-cms-api": [
        "dist/ntk-cms-api/ntk-cms-api",
        "dist/ntk-cms-api"
      ],
      "ntk-cms-module": [
        "dist/ntk-cms-module/ntk-cms-module",
        "dist/ntk-cms-module"
      ],
      "@angular/*": [
        "./node_modules/@angular/*"
      ]

    }
  }
}
